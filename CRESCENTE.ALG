Algoritmo "crescente"

Var
   x, y : inteiro
   


Inicio
   escreval("Digite dois numeros: ")
   leia (x, y)
   
   enquanto x <> y faca

      se x < y entao
          escreval("Crescente")
      senao
          escreval("Decrescente")
      fimse

      escreval ("Digite mais dois numeros: ")
      leia(x,y)

   fimenquanto



Fimalgoritmo
